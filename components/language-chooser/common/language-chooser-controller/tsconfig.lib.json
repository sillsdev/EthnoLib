{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "langtagProcessing.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": ["./**/*.js", "./**/*.jsx", "./**/*.ts", "./**/*.tsx"]
}
